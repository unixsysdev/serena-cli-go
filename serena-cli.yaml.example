# Serena CLI sample configuration.
# Save as serena-cli.yaml in your project or config dir (~/.serena-cli or ~/.config/serena-cli).

llm:
  # API key for Chutes (or set LLM_API_KEY env var)
  api_key: "your-api-key"

  # Base URL for Chutes API
  base_url: "https://llm.chutes.ai/v1"

  # Model to use (can also switch at runtime with /model)
  model: "zai-org/GLM-4.7-TEE"

  # Model to use for context compaction (/compact)
  compaction_model: "Qwen/Qwen3-VL-235B-A22B-Instruct"

  # Max time to wait for LLM responses before timing out (seconds)
  timeout_seconds: 300

serena:
  # Project path (optional; leave empty to manage projects in Serena itself)
  # project_path: ""

  # Context mode (optional; leave empty to let Serena decide)
  # context: ""

  # Max time to wait for tool results before timing out (seconds)
  tool_timeout_seconds: 300

  # Disable Serena's web dashboard and GUI log window (prevents focus steal)
  enable_web_dashboard: false
  enable_gui_log_window: false

  # Command to start Serena MCP (default: uvx)
  command: "uvx"

  # Extra arguments for the MCP server
  args:
    - "--from"
    - "git+https://github.com/oraios/serena"
    - "serena"
    - "start-mcp-server"

# Debug mode (prints verbose logs)
debug: false
